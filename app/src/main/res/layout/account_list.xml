<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/account_name"
        style="@style/Account.ListItemTextView"
        android:layout_width="80dp"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif"
        app:layout_constraintEnd_toStartOf="@+id/account_address"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="root" />

    <TextView
        android:id="@+id/account_address"
        style="@style/Account.ListItemTextView"
        android:layout_width="200dp"
        android:layout_below="@+id/account_name"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/account_port"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/account_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="123.456.789.123" />

    <TextView
        android:id="@+id/account_port"
        style="@style/Account.ListItemTextView"
        android:layout_width="80dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="22" />

</androidx.constraintlayout.widget.ConstraintLayout>